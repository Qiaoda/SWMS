<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_bg" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/shadow_bg"
        android:orientation="vertical"
        android:paddingLeft="8dp"
        android:paddingRight="8dp" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:layout_marginTop="4dp" >

            <TextView
                style="@style/small_gray_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="通知单号:  " />

            <TextView
                android:id="@+id/allocationNotice_code"
                style="@style/normal_black_text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_vertical" />

            
        </LinearLayout>

        <LinearLayout
            android:id="@+id/comeNotice_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp" >

            <TextView
                style="@style/small_gray_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="目标门店:  " />

            <TextView
                android:id="@+id/allcationNotice_come"
                style="@style/normal_black_text_db"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="8dp"
                android:text="物流部" />
        </LinearLayout >
        
        <LinearLayout  android:id="@+id/allocationNotice_BeginDate_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp" >
             <TextView
                style="@style/small_gray_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="起始日期:  " />

            <TextView
                android:id="@+id/allocationNotice_BeginDate"
                style="@style/normal_black_text_db"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="8dp"
                android:text="物流部" />
            
        </LinearLayout>
        
        <LinearLayout  android:id="@+id/allocationNotice_EndDate_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp" >
             <TextView
                style="@style/small_gray_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="截止日期:  " />

            <TextView
                android:id="@+id/allocationNotice_EndDate"
                style="@style/normal_black_text_db"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="8dp"
                android:text="物流部" />
            
        </LinearLayout>

         <LinearLayout  android:id="@+id/allocationNotice_Qty_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp" >
             <TextView
                style="@style/small_gray_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="通知数量 :  " />

            <TextView
                android:id="@+id/allocationNotice_Qty"
                style="@style/normal_black_text_db"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="8dp"
                android:text="物流部" />
            
        </LinearLayout>
        
           <LinearLayout  android:id="@+id/allocationNotice_LeftQty_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp" >
             <TextView
                style="@style/small_gray_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="可调数量 :  " />

            <TextView
                android:id="@+id/allocationNotice_LeftQty"
                style="@style/normal_black_text_db"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="8dp"
                android:text="物流部" />    
        </LinearLayout>
        
       

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp" >

            <TextView
                android:id="@+id/allocationNotice_time"
                style="@style/small_gray_text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="2015-6-6 13:00" />
            
            <TextView
                android:id="@+id/allcationNotice_type"
                style="@style/normal_black_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="4dp"
                android:textColor="@color/color_red_text" />

           
        </LinearLayout>
    </LinearLayout>

</LinearLayout>